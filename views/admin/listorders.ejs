<htm>
  <body>
    <style>
      body {
          font-family: 'Noto Sans SC', sans-serif;
          padding-top: 250px;
          padding-left: 300px;
          background-color: turquoise;
          
        }
  </style>
    <h1>DANH SÁCH ĐẶT HÀNG </h1>
    <table border="1">
      <tr>
        <th>ID</th>
        <th>Khách hàng</th>
        <th>SĐT</th>
        <th>Ngày giờ</th>
        <th>Số lượng</th>
        <th>Trạng thái</th>
        <th>Hoạt động</th>
      </tr>
      <%  for (var item of orders) { %>
      <tr>
        <td>
          <a href="/admin/listorders?id=<%= item._id %>">
            <%= item._id %>
          </a>
        </td>
        <td><%= item.custName %></td>
        <td><%= item.custPhone %></td>
        <td><%= new Date(item.datetime).toLocaleString() %></td>
        <td><%= item.total %></td>
        <td><%= item.status %></td>
        <td>
          <a href="/admin/updatestatus?id=<%= item._id %>&status=ĐANG PHÊ DUYỆT">PHÊ DUYỆT</a>
          ||
          <a href="/admin/updatestatus?id=<%= item._id %>&status=ĐÃ HỦY">HỦY ĐƠN HÀNG</a>
        </td>
      </tr>
      <% } %>
    </table>

    <% if (order) { %>
    <h1>ORDER DETAILS</h1>
    <table border="1">
      <tr>
        <th>ProductID</th>
        <th>ProductName</th>
        <th>Image</th>
        <th>Price</th>
        <th>Quantity</th>
      </tr>
      <% for (var item of order.items) { %>
      <tr>
        <td><%= item.product._id %></td>
        <td><%= item.product.name %></td>
        <td><img src="1c062f35a1ca4b9412db.image %>" width="70" height="70" /></td>
        <td><%= item.product.price %></td>
        <td><%= item.quantity %></td>
      </tr>
      <% } %>
    </table>
    <% } %>
  </body>
</htm>